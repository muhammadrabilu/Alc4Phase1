<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abduhamidsanichaya.alc4phase1.Profile">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name_text_view">

        <TextView
            style="@style/nameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Track:    " />

        <TextView
            style="@style/profileDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android" />

    </LinearLayout>

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="221dp"
        android:layout_height="184dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:src="@drawable/rabilu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_pic"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:text="Rabilu Muhammad"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_pic" />

    <View
        android:id="@+id/vertical_line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_below="@id/name_text_view"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="#5f5a5a"
        app:layout_constraintBottom_toBottomOf="@+id/name_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name_text_view">

        <TextView
            style="@style/nameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country:    " />

        <TextView
            style="@style/profileDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nigeria" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name_text_view">

        <TextView
            style="@style/nameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:    " />

        <TextView
            style="@style/profileDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="muhmmed_rabilu@yahoo.com" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name_text_view">

        <TextView
            style="@style/nameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number:    " />

        <TextView
            style="@style/profileDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2347067808411" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name_text_view">

        <TextView
            style="@style/nameHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slack Username:    " />

        <TextView
            android:id="@+id/slack_username"
            style="@style/profileDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
